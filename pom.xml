      <!--            </goals>-->
      <!--          </execution>-->
      <!--        </executions>-->
      <!--        <configuration>-->
      <!--          <rules>-->
      <!--            <banCircularDependencies/>-->
      <!--          </rules>-->
      <!--          <fail>true</fail>-->
      <!--        </configuration>-->
